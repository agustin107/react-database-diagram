{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "sourceRoot": "lib/main.ts",
    "target": "es5",
    "lib": ["es2015", "dom"],
    "sourceMap": true,
    "declaration": true,
    "skipLibCheck": true,
    "jsx": "react",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "node_modules",
    "./dist",
    "jest",
    "setupTests.ts",
    "demo",
    "copyStaticAssets.ts",
    "**/__tests__/*"
  ]
}
